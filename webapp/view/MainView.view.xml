<mvc:View controllerName="DXC.invoices.controller.MainView"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m">
    <Page id="page" title="{i18n>title}">
        <content>
            <Panel headerText="{i18n>selectionScreen}">
                <Label id="labelShipName" labelFor="shipName" text="{i18n>shipName}" class="sapUiSmallMargin"></Label>
                <Input id="shipName" width="200px" class="sapUiSmallMarginEnd"></Input>
                <Label id="labelCountry" text="{i18n>Country}" class="sapUiSmallMargin"></Label>
            </Panel>
        </content>
    </Page>
</mvc:View>
